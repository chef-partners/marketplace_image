#!/bin/bash

set -ex

sudo rm -rf /etc/yum.repos.d/*chef*
sudo rpm --import https://packages.chef.io/chef.asc
sudo tee /etc/yum.repos.d/chef-current.repo <<EOL
[chef-current]
name=chef-current
baseurl=https://packages.chef.io/repos/yum/current/el/7/\$basearch/
gpgcheck=1
enabled=1
EOL
sudo yum makecache fast
