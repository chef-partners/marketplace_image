#!/bin/bash

set -ex

sudo rm -rf /etc/yum.repos.d/*chef*
sudo rpm --import https://packages.chef.io/chef.asc
sudo tee /etc/yum.repos.d/chef-stable.repo <<EOL
[chef-stable]
name=chef-stable
baseurl=https://packages.chef.io/repos/yum/stable/el/7/\$basearch/
gpgcheck=1
enabled=1
EOL
sudo yum makecache fast
